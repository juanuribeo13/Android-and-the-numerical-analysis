<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewWarningActivityLagrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/warning"
        android:gravity="center_horizontal"
        android:text="@string/text_view_warning_interpolation"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewPolynomialActivityLagrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/linearLayoutLActivityLagrange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPolynomialActivityLagrange"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewEvaluationActivityLagrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutLActivityLagrange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editTextXActivityLagrange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEvaluationActivityLagrange"
        android:hint="@string/hint_edit_text_x0"
        android:inputType="numberDecimal|numberSigned" />

    <Button
        android:id="@+id/buttonCalculateActivityLagrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextXActivityLagrange"
        android:onClick="onCalculateButtonClick"
        android:text="@string/button_calculate" />

</RelativeLayout>