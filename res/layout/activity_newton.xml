<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewFunctionActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editTextX0ActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textViewFunctionActivityNewton"
        android:layout_marginTop="2dp"
        android:hint="@string/hint_edit_text_x0"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextIterationsActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editTextX0ActivityNewton"
        android:layout_toRightOf="@id/editTextX0ActivityNewton"
        android:hint="@string/hint_edit_text_iterations"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextToleranceActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editTextX0ActivityNewton"
        android:layout_toRightOf="@id/editTextIterationsActivityNewton"
        android:hint="@string/hint_edit_text_tolerance"
        android:inputType="numberDecimal" />
    
    <EditText
        android:id="@+id/editTextDFActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editTextX0ActivityNewton"
        android:layout_toRightOf="@id/editTextToleranceActivityNewton"
        android:hint="@string/hint_edit_text_df"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewRootActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextX0ActivityNewton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonCalculateActivityNewton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="93dp"
        android:onClick="onCalculateButtonClick"
        android:text="@string/button_calculate" />

</RelativeLayout>
