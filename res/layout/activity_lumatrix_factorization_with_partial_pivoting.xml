<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/textViewResultActivityLUMatrixFactorizationWithPartialPivoting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/text_view_result" />

    <ScrollView
        android:id="@+id/scrollViewResultAcitivityLUMatrixFactorizationWithPartialPivoting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewResultActivityLUMatrixFactorizationWithPartialPivoting"
        android:fillViewport="false" >

        <LinearLayout
            android:id="@+id/linearLayoutResultActivityLUMatrixFactorizationWithPartialPivoting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonExecutionActivityLUMatrixFactorizationWithPartialPivoting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:onClick="showMatrixExecutionActivityLUMatrixFactorizationWithPartialPivoting"
        android:text="@string/button_matrix_execution" />

</RelativeLayout>