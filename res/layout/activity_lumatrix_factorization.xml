<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/textViewWarningActivityLUMatrixFactorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/warning"
        android:gravity="center_horizontal"
        android:text="@string/text_view_warning_input_matrix"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewResultActivityLUMatrixFactorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/text_view_result" />

    <ScrollView
        android:id="@+id/scrollViewResultAcitivityLUMatrixFactorization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewResultActivityLUMatrixFactorization"
        android:fillViewport="false" >

        <LinearLayout
            android:id="@+id/linearLayoutResultActivityLUMatrixFactorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonExecutionActivityLUMatrixFactorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:onClick="showMatrixExecutionActivityLUMatrixFactorization"
        android:text="@string/button_matrix_execution" />

</RelativeLayout>