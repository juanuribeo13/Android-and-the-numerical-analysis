<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <ScrollView
        android:id="@+id/scrollViewResultAcitivitySimpleGaussianElimination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false" >

        <LinearLayout
            android:id="@+id/linearLayoutResultActivitySimpleGaussianElimination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewResultActivitySimpleGaussianElimination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_result_activity_simple_gaussian_elimination" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonExecutionActivitySimpleGaussianElimination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollViewResultAcitivitySimpleGaussianElimination"
        android:onClick="showMatrixExecution"
        android:text="@string/button_matrix_execution" />

</RelativeLayout>