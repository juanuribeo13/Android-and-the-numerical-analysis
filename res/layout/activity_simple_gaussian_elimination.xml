<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutExecutionMatricesActivitySimpleGaussianElimination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textViewExecutionActivitySimpleGaussianElimination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_execution_activity_simple_gaussian_elimination" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutResultActivitySimpleGaussianElimination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutExecutionMatricesActivitySimpleGaussianElimination"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textViewResultActivitySimpleGaussianElimination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_result_activity_simple_gaussian_elimination" />

    </LinearLayout>

</RelativeLayout>